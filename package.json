{
  "name": "servicio-reparacion-pc",
  "version": "1.0.0",
  "description": "Sitio web profesional para servicio de reparación, limpieza y mantenimiento de PC y netbooks",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "install-deps": "npm install",
    "setup-db": "node scripts/setup-database.js",
    "migrate-db": "node scripts/migrate-database.js",
    "seed-db": "node scripts/seed-database.js",
    "backup": "./scripts/backup.sh",
    "restore": "./scripts/restore.sh",
    "ssl-renew": "sudo certbot renew --nginx",
    "ssl-check": "./scripts/ssl-check.sh",
    "dns-update": "./scripts/update-duckdns.sh",
    "dns-check": "./scripts/dns-check.sh",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "monitor": "./scripts/monitor-system.sh",
    "dashboard": "./scripts/dashboard.sh",
    "security-audit": "./scripts/security-audit.sh",
    "performance-check": "./scripts/performance-optimization.sh",
    "diagnostics": "./scripts/diagnostics.sh",
    "maintenance:daily": "./scripts/daily-maintenance.sh",
    "maintenance:weekly": "./scripts/weekly-maintenance.sh",
    "maintenance:monthly": "./scripts/monthly-maintenance.sh",
    "setup:install": "./scripts/install.sh",
    "setup:dns": "./scripts/dns-setup.sh",
    "setup:ssl": "./scripts/ssl-setup.sh",
    "setup:firewall": "./scripts/firewall-setup.sh",
    "deploy": "./scripts/start.sh",
    "logs": "tail -f logs/app.log",
    "logs:nginx": "sudo tail -f /var/log/nginx/access.log",
    "logs:error": "tail -f logs/app.log | grep -i error",
    "clean": "npm run clean:logs && npm run clean:cache",
    "clean:logs": "find logs/ -name '*.log' -mtime +30 -delete",
    "clean:cache": "npm cache clean --force",
    "update:deps": "npm update",
    "update:system": "./scripts/system-update.sh",
    "lint": "eslint backend/ --ext .js",
    "lint:fix": "eslint backend/ --ext .js --fix",
    "format": "prettier --write backend/**/*.js",
    "build": "echo 'No build step required for this project'",
    "prestart": "npm run health-check || echo 'Health check failed, but starting anyway...'",
    "postinstall": "echo 'Instalación completada. Configura .env antes de continuar.'"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bad-words": "^3.0.4",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.13",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.0.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.0.1",
    "express-useragent": "^1.0.15",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "fs-extra": "^11.2.0",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsdom": "^23.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lru-cache": "^10.1.0",
    "maxmind": "^4.3.6",
    "memory-cache": "^0.2.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-rsa": "^1.1.1",
    "nodemailer": "^6.9.7",
    "pm2": "^5.4.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "rsa-pem-to-jwk": "^1.1.3",
    "sanitize-html": "^2.11.0",
    "session-file-store": "^1.5.0",
    "sharp": "^0.33.1",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.6",
    "ua-parser-js": "^1.0.37",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "reparacion",
    "pc",
    "servicio",
    "local",
    "argentina",
    "netbook",
    "computadoras",
    "mantenimiento",
    "limpieza",
    "soporte-tecnico",
    "nodejs",
    "express",
    "sqlite"
  ],
  "author": {
    "name": "Servicio Reparación PC",
    "email": "contacto@tu-dominio.com.ar",
    "url": "https://tu-dominio.com.ar"
  },
  "license": "MIT",
  "homepage": "https://tu-dominio.com.ar",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-usuario/servicio-reparacion-pc.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/servicio-reparacion-pc/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://tu-dominio.com.ar/donate"
  },
  "config": {
    "port": 3000,
    "ssl_port": 443,
    "db_path": "./database/contacts.db"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/node_modules/**",
      "!backend/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "lint-staged": {
    "backend/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "directories": {
    "lib": "./backend",
    "doc": "./docs",
    "test": "./tests"
  },
  "files": [
    "backend/",
    "frontend/",
    "scripts/",
    "config/",
    "docs/",
    "database/schema.sql",
    ".env.example",
    "README.md"
  ],
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
