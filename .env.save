# ======================================
# CONFIGURACIÓN DEL SERVICIO REPARACIÓN PC
# ======================================
# Copia este archivo a .env y configura todas las variables

# ======================================
# CONFIGURACIÓN DEL SERVIDOR
# ======================================
PORT=3000
NODE_ENV=development

# Dominio principal (sin http/https)
# Para DuckDNS: tu-subdominio.duckdns.org
# Para dominio propio: tu-dominio.com.ar
DOMAIN=o.com.ar

# URL base completa (incluye protocolo)
BASE_URL=https://tu-dominio.com.ar

# ======================================
# BASE DE DATOS
# ======================================
DB_PATH=./database/contacts.db

# ======================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# ======================================
# Recomendado: Gmail con App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-aqui
EMAIL_TO=tu-email@gmail.com

# Plantilla de email de confirmación
EMAIL_FROM_NAME=Servicio Reparación PC
EMAIL_SUBJECT=Consulta recibida - Servicio Reparación PC

# ======================================
# GOOGLE reCAPTCHA v3
# ======================================
# Obtener en: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=6Lc-tu-site-key-aqui
RECAPTCHA_SECRET_KEY=6Lc-tu-secret-key-aqui
# Umbral mínimo para considerar humano (0.0-1.0)
RECAPTCHA_THRESHOLD=0.5

# ======================================
# SEGURIDAD Y AUTENTICACIÓN
# ======================================
# Clave secreta para JWT (mínimo 32 caracteres)
JWT_SECRET=tu-jwt-secret-super-seguro-de-al-menos-32-caracteres
# Clave para sesiones (mínimo 32 caracteres)
SESSION_SECRET=tu-session-secret-tambien-muy-seguro-32-chars

# Hash para cookies seguras
COOKIE_HASH_KEY=tu-cookie-hash-key-segura

# ======================================
# RATE LIMITING Y PROTECCIÓN
# ======================================
# Ventana de tiempo para rate limiting (en milisegundos)
RATE_LIMIT_WINDOW_MS=3600000
# Máximo número de requests por ventana
RATE_LIMIT_MAX_REQUESTS=3

# Rate limiting general para páginas
GENERAL_RATE_LIMIT_WINDOW_MS=60000
GENERAL_RATE_LIMIT_MAX_REQUESTS=30

# Tiempo de bloqueo por comportamiento sospechoso (minutos)
SUSPICIOUS_BLOCK_TIME=60

# ======================================
# WHATSAPP BUSINESS
# ======================================
# Número de WhatsApp con código de país (sin + ni espacios)
WHATSAPP_NUMBER=5491112345678
# Mensaje predefinido
WHATSAPP_MESSAGE=Hola! Vi tu página web y necesito ayuda con mi

# ======================================
# DNS DINÁMICO (DuckDNS)
# ======================================
# Subdominio en DuckDNS (sin .duckdns.org)
DUCKDNS_DOMAIN=tu-subdominio
# Token de DuckDNS (obtener en https://www.duckdns.org)
DUCKDNS_TOKEN=tu-token-duckdns-aqui

# ======================================
# SSL/HTTPS
# ======================================
# Email para Let's Encrypt
SSL_EMAIL=tu-email@gmail.com
# Renovación automática (días antes del vencimiento)
SSL_RENEW_DAYS=30

# ======================================
# LOGGING Y MONITOREO
# ======================================
# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info
# Archivo de log principal
LOG_FILE=logs/app.log
# Máximo tamaño de archivo de log (MB)
LOG_MAX_SIZE=10
# Máximo número de archivos de log rotados
LOG_MAX_FILES=5

# ======================================
# BACKUP AUTOMÁTICO
# ======================================
# Hora para backup automático (formato cron)
BACKUP_SCHEDULE=0 2 * * *
# Máximo número de backups a mantener
MAX_BACKUPS=30
# Directorio de backups
BACKUP_DIR=backups

# ======================================
# NOTIFICACIONES (OPCIONAL)
# ======================================
# Webhook para notificaciones (Slack, Discord, etc._URL=
# Email de notificaciones de administrador
ADMIN_EMAIL=tu-admin@gmail.com

# ======================================
# CONFIGURACIÓN REGIONAL
# ======================================
# Zona horaria
TZ=America/Argentina/Buenos_Aires
# Idioma
LOCALE=es-AR
# Moneda para precios
CURRENCY=ARS

# ======================================
# CONFIGURACIÓN DE DESARROLLO (OPCIONAL)
# ======================================
# Puerto para desarrollo
DEV_PORT=3001
# Habilitar debug
DEBUG=false
# Mostrar stack traces completos
SHOW_STACK_TRACE=false

# ======================================
# CONFIGURACIÓN AVANZADA
# ======================================
# Timeout para requests HTTP (ms)
HTTP_TIMEOUT=30000
# Máximo tamaño de payload (MB)
MAX_PAYLOAD_SIZE=1
# Número de workers para clustering
CLUSTER_WORKERS=0

# Configuración de CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Headers de seguridad personalizados
CUSTOM_SECURITY_HEADERS=true

# ======================================
# INTEGRACIÓN CON SERVICIOS EXTERNOS
# ======================================
# Google Analytics (opcional)
GA_TRACKING_ID=

# Facebook Pixel (opcional)
FB_PIXEL_ID=

# ======================================
# CONFIGURACIÓN DE DOMINIO .COM.AR
# ======================================
# Si usas dominio .com.ar en lugar de DuckDNS
DOMAIN_REGISTRAR=nic.ar
DOMAIN_EXPIRY_REMINDER_DAYS=30

# ======================================
# CONFIGURACIÓN DE FIREWALL
# ======================================
# IPs permitidas (separadas por coma)
WHITELIST_IPS=127.0.0.1,::1
# IPs bloqueadas permanentemente
BLACKLIST_IPS=

# ======================================
# CONFIGURACIÓN DE PROXY (SI APLICA)
# ======================================
# Si estás detrás de un proxy corporativo
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ======================================
# VARIABLES DE PERSONALIZACIÓN
# ======================================
# Nombre del servicio
SERVICE_NAME=Servicio Reparación PC
# Nombre del técnico
TECHNICIAN_NAME=Tu Nombre
# Años de experiencia
YEARS_EXPERIENCE=5
# Área de cobertura
COVERAGE_AREA=Buenos Aires, Argentina

# ======================================
# CONFIGURACIÓN DE MANTENIMIENTO
# ======================================
# Habilitar modo mantenimiento
MAINTENANCE_MODE=false
# Mensaje de mantenimiento
MAINTENANCE_MESSAGE=Sitio en mantenimiento. Volvemos pronto.

# ======================================
# CONFIGURACIÓN DE TESTING
# ======================================
# Base de datos para testing
TEST_DB_PATH=./database/test.db
# Habilitar endpoints de testing
ENABLE_TEST_ENDPOINTS=false

# ======================================
# CONFIGURACIÓN DE CACHE
# ======================================
# Habilitar cache en memoria
ENABLE_MEMORY_CACHE=true
# TTL del cache (segundos)
CACHE_TTL=3600
# Tamaño máximo del cache (MB)
CACHE_MAX_SIZE=100
