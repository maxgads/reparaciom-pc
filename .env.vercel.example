# ======================================
# ENVIRONMENT CONFIGURATION FOR VERCEL + SUPABASE
# ======================================
# Configure estas variables en el Vercel Dashboard
# Project Settings > Environment Variables
#
# IMPORTANTE: No subir ningún archivo .env al repositorio
# ======================================

# ======================================
# NODE ENVIRONMENT
# ======================================
NODE_ENV=production

# ======================================
# SUPABASE CONFIGURATION
# ======================================
# Get these from: https://app.supabase.com > Project Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ======================================
# reCAPTCHA CONFIGURATION
# ======================================
# Get from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_THRESHOLD=0.5
BYPASS_RECAPTCHA=false

# ======================================
# EMAIL CONFIGURATION (SMTP)
# ======================================
# Gmail example (use App Password, not regular password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=Servicio de Reparación PC <noreply@yoursite.com>
EMAIL_TO=contacto@yoursite.com
EMAIL_SUBJECT_PREFIX=[Reparación PC]

# ======================================
# CONTACT INFORMATION
# ======================================
# WhatsApp number with country code (no + or spaces)
WHATSAPP_NUMBER=5491123456789
DOMAIN=yoursite.vercel.app

# ======================================
# RATE LIMITING
# ======================================
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=10

# ======================================
# DATABASE & RETENTION
# ======================================
DB_BACKUP_RETENTION_DAYS=30

# ======================================
# ADMIN CONFIGURATION (Optional)
# ======================================
# Generate a random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SECRET_KEY=your-random-admin-secret-here

# ======================================
# DEBUG MODE (Development only)
# ======================================
DEBUG_MODE=false

# ======================================
# OPTIONAL: ANALYTICS
# ======================================
# Google Analytics tracking ID (optional)
GA_TRACKING_ID=

# ======================================
# REGIONAL CONFIGURATION
# ======================================
TZ=America/Argentina/Buenos_Aires
LOCALE=es-AR
CURRENCY=ARS
